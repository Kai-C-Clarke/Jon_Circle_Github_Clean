# =============================================================================
# The Circle App - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Flask Configuration
# -----------------------------------------------------------------------------
# Generate a secure secret key:
# python3 -c "import secrets; print(secrets.token_urlsafe(32))"
FLASK_SECRET_KEY=your-secret-key-here-change-this

# Environment: development, staging, or production
ENVIRONMENT=production

# Debug mode (should be false in production)
DEBUG=false

# -----------------------------------------------------------------------------
# HTTP Basic Authentication (Recommended for single-user deployment)
# -----------------------------------------------------------------------------
# Simple username/password protection for the app
# Generate password hash:
# python3 -c "from werkzeug.security import generate_password_hash; print(generate_password_hash('your_password'))"
APP_USERNAME=guypalmer
APP_PASSWORD_HASH=pbkdf2:sha256:600000$...your-hashed-password-here

# -----------------------------------------------------------------------------
# AI Service API Keys
# -----------------------------------------------------------------------------
# DeepSeek API - Used for AI search, categorization, and biography generation
# Get your API key from: https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Anthropic API - Optional, for Claude-powered features
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI API - If using OpenAI models (currently using DeepSeek)
# OPENAI_API_KEY=your-openai-api-key-here

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# CORS Allowed Origins (comma-separated)
# For Render deployment, use your app URL:
# https://your-app-name.onrender.com
ALLOWED_ORIGINS=https://your-app-name.onrender.com,http://localhost:5000

# JWT Secret Key (if using JWT authentication)
# Generate: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Database path (for Render deployment with persistent disk, use /var/data)
# Local development: ./circle_memories.db
# Render deployment: /var/data/circle_memories.db
DATABASE_PATH=/var/data/circle_memories.db

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Upload folder path
# Local development: ./uploads
# Render deployment: /var/data/uploads
UPLOAD_FOLDER=/var/data/uploads

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=50

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file (true/false)
# Note: Render uses stdout/stderr, so set to false for Render
LOG_TO_FILE=false

# -----------------------------------------------------------------------------
# Rate Limiting (optional)
# -----------------------------------------------------------------------------
# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Rate limits for different endpoints
LOGIN_RATE_LIMIT=5 per minute
API_RATE_LIMIT=100 per minute
BIOGRAPHY_RATE_LIMIT=5 per hour

# -----------------------------------------------------------------------------
# Email Configuration (optional - for notifications)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@thecircleapp.com

# -----------------------------------------------------------------------------
# Backup Configuration (optional)
# -----------------------------------------------------------------------------
# Enable automatic backups (true/false)
# ENABLE_BACKUPS=true
# BACKUP_INTERVAL_HOURS=24
# BACKUP_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Performance Settings
# -----------------------------------------------------------------------------
# Gunicorn workers (recommended: 2-4 for single-user app)
GUNICORN_WORKERS=2

# Gunicorn timeout in seconds
GUNICORN_TIMEOUT=120
